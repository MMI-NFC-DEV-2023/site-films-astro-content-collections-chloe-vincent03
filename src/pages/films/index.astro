---
import { getCollection } from "astro:content"
import Layout from "../../layouts/Layout.astro";

const film = await getCollection("films");

---

<Layout pageTitle="Liste des films">
    <h1 class="text-2xl text-purple-500" >Liste des films</h1>
<ul class="my-5 flex gap-5" >
    {film.map((film) => (
        <li>
            <a href={`/films/${film.id}`} class="bg-purple-800 p-2 rounded-full text-white hover:bg-purple-600 hover:px-4 " >{film.data.titre}</a>
        </li>
    ))}
</ul>

    <!-- <pre>
        {JSON.stringify(film, null, 2)}
    </pre> -->
  
</Layout>
