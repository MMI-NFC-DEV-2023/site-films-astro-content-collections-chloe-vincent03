---
import { getCollection } from "astro:content"
import Layout from "../../layouts/Layout.astro";

const personne = await getCollection("personne");

---

<Layout pageTitle="Liste de Personne">
    <h1 class="text-2xl text-purple-500" >Liste des personnes</h1>
<ul class="my-5 flex gap-5" >
    {personne.map((personne) => (
        <li>
            <a href={`/personne/${personne.id}`} class="bg-purple-800 p-2 rounded-full text-white hover:bg-purple-600 hover:px-4 " >{personne.data.nom}</a>
        </li>
    ))}
</ul>

    <!-- <pre>
        {JSON.stringify(personne, null, 2)}
    </pre> -->
  
</Layout>
